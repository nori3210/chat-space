.chat-main
  
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__group-name 
        = @group.name
      .chat-main__group-info__left__group
        .chat-main__group-info__left__group__member-list member :
        .chat-main__group-info__left__group__member-list--member 
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path (@group), class: "chat-main__group-info__edit-btn" do
      Edit
  
  .chat-main__message-list
    = render @messages
   
  .chat-main__footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .message-form
        = f.text_field :content, class: 'message-form__btn', placeholder: 'type a message'
        = f.label :image, class: 'message-form__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'message-form__image__file'
      = f.submit 'Send', class: 'submit-btn'
  

        