.side-ber
  .side-ber__user-name
    .side-ber__user-name__side-box
      .user-name 
        = current_user.name 
      .icon-display 
        = link_to new_group_path do
          = icon('far', 'edit',  class: "icon-display__btn")
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog',  class: "icon-display__btn")
  .side-ber__group-list
    - current_user.groups.each do |group|
      .side-ber__group-list__messages
        = link_to group_messages_path (group) do
          .side-ber__group-list__messages__group-name 
            = group.name
          .side-ber__group-list__messages__message
            = group.show_last_message